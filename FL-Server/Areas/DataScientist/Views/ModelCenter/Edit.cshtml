@model FL_Server.Models.Models.ModelCenter

@{
    ViewData["Title"] = "Edit";
}






<div class="card card-custom">
 <div class="card-header">
  <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
   <h3 class="card-label">
    ModelCenter
    <small>Edit</small>
   </h3>
  </div>
        
 </div>
 <div class="card-body">
  <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <label class="control-label">Model Catalogue Reference</label>
                <select asp-for="ModelCatalogueId" class="form-control" asp-items="ViewBag.ModelCatalogueId"></select>
                <span asp-validation-for="ModelCatalogueId" class="text-danger"></span>
            </div>
          

              <div class="form-group">
                            <label>Status</label>
                            <div class="radio-inline">
                                <label class="radio radio-lg">
                                    <input asp-for="ModelType" type="radio" value="False" checked="checked" >
                                    <span></span>Private
                                </label>
                                <label class="radio radio-lg">
                                    <input asp-for="ModelType" type="radio" value="True" >
                                    <span></span>Public
                                </label>

                            </div>
                        </div>


           
            <div class="form-group">
                <label class="control-label">Scripts Included?</label>
                <select asp-for="FileModelId" class="form-control" asp-items="ViewBag.FileModelId">

                                                <option label=" "></option>


                </select>

                <span asp-validation-for="FileModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Analysis Center Reference</label>
                <select asp-for="StudyCenterID" class="form-control" asp-items="ViewBag.StudyCenterID">
                                                <option label=" "></option>

                </select>
                <span asp-validation-for="StudyCenterID" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                            <label>DSS</label>
                            <div class="radio-inline">
                                <label class="radio radio-lg">
                                    <input asp-for="DSS" type="radio" value="False" checked="checked">
                                    <span></span>No
                                </label>
                                <label class="radio radio-lg">
                                    <input asp-for="DSS" type="radio" value="True">
                                    <span></span>Included
                                </label>

                            </div>
                        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 </div>
    <div class="card-footer d-flex justify-content-between">
        <a  asp-action="Index" class="btn btn-light-primary font-weight-bold">Back to List</a>
@*        <a href="#" class="btn btn-outline-secondary font-weight-bold">Learn more</a>
*@ </div>
</div>









@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
