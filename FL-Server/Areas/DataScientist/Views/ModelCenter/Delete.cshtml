@model FL_Server.Models.Models.ModelCenter

@{
    ViewData["Title"] = "Delete";
}


<div class="card card-custom">
 <div class="card-header">
  <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
   <h3 class="card-label">
    Are you sure you want to delete this?
    <small>Lets Hack the Silos</small>
   </h3>
  </div>
        
 </div>
 <div class="card-body">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModelCatalogue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelCatalogue.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModelType)
        </dt>
         <dd class="col-sm-10">
                @*            @Html.DisplayFor(model => model.StudyType)
                *@
                @if (Model.ModelType = true)
                {
                    <a class="btn btn-light-dark font-weight-bold">Public</a>

                }
                else
                {
                    <a class="btn btn-light-danger font-weight-bold">Private</a>

                }


            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileModel)
        </dt>
      <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FileModel.Name)

                @if (@Model.FileModel == null)
                {
                    <div>No file is included</div>
                }
                else
                {
                <dt class="col-sm-2">
                    Script File
                </dt>
                <dd class="col-sm-10">
                        @* <a type="button" class="btn btn-primary" asp-controller="ScriptCenter" asp-action="DownloadFileFromFileSystem" asp-route-id="@Model.Id">Download_sys</a>
                            <a type="button" class="btn btn-primary" asp-controller="ScriptCenter" asp-action="DownloadFileFromDatabase" asp-route-id="@Model.Id">Download_db</a>*@





                </dd>
                }

            
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudyCenter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudyCenter.Title)
        </dd> 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DSS)
        </dt>
        <dd class="col-sm-10">
                
                 @if (Model.DSS == true)
                {
                    <a class="btn btn-light-dark font-weight-bold">Included</a>

                }
                else
                {
                    <a class="btn btn-light-danger font-weight-bold">Not Included</a>

                }

            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdate)
        </dd>
    </dl>
 </div>
    <div class="card-footer d-flex justify-content-between">
         <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete"  class="btn btn-light-primary font-weight-bold" /> |
        <a asp-action="Index" class="btn btn-secondary font-weight-bold">Back to List</a>
    </form>


        
 </div>
</div>







