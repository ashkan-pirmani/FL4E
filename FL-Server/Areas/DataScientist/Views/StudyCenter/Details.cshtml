                <!--begin:Form-->
                <form asp-controller="StudyCenter" asp-action="Launch" id="kt_modal_new_target_form" target="_blank">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!--begin::Heading-->
                    <div class="mb-13 text-center">
                        <!--begin::Title-->
                        <h1 class="mb-3"> Preparing Your Session </h1>
                        <!--end::Title-->
