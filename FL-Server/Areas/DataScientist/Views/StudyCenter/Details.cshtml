                        <div class="col-6">
                            <input asp-for="AnalysisCenter.IP" class="form-control form-control-lg form-control-solid" placeholder="Server IP" required>
                            <span asp-validation-for="AnalysisCenter.IP" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <br />
                            <input asp-for="AnalysisCenter.Port" class="form-control form-control-lg form-control-solid" placeholder="Port Number" required>
                            <span asp-validation-for="AnalysisCenter.Port" class="text-danger"></span>
                        </div>
                    </div>




                    <!--end::Input group-->
