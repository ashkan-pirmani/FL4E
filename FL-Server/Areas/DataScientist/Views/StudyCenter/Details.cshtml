@model FL_Server.Models.HomeViewModel
@*@model FL_Server.Models.Models.Upload.FileUploadViewModel
*@
@{
    ViewData["Title"] = "Details";
}




<div class="card card-custom d-flex justify-content-between">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-chat-1 text-primary"></i>
            </span>
            <h3 class="card-label">
                Detailed Analysis Plan
                <small>Lets Learn From Each Other</small>
            </h3>
        </div>
        <div class="card-toolbar">
            <a asp-area="DataScientist" asp-action="Index" asp-controller="ModelCenter" class="btn btn-sm btn-light-primary font-weight-bold">
                <i class="flaticon2-cube"></i> Model Center?
            </a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudyCenter.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudyCenter.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudyCenter.StudyCatalogue)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudyCenter.StudyCatalogue.Title)
            </dd>
            <dt class="col-sm-2">
                Analysis Type
            </dt>
            <dd class="col-sm-10">
                @*            @Html.DisplayFor(model => model.StudyType)
                *@
                @if (Model.StudyCenter.StudyType = true)
                {
                    <a class="btn btn-light-dark font-weight-bold">Public</a>

                }
                else
                {
                    <a class="btn btn-light-danger font-weight-bold">Private</a>

                }


            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudyCenter.ApplicationUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudyCenter.ApplicationUser.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudyCenter.FileModel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudyCenter.FileModel.Name)

                @if (@Model.StudyCenter.FileModel == null)
                {
                    <div>No file is included</div>
                }
                else
                {
                <dt class="col-sm-2">
                    Script File
                </dt>
                <dd class="col-sm-10">
                        @* <a type="button" class="btn btn-primary" asp-controller="ScriptCenter" asp-action="DownloadFileFromFileSystem" asp-route-id="@Model.Id">Download_sys</a>
                            <a type="button" class="btn btn-primary" asp-controller="ScriptCenter" asp-action="DownloadFileFromDatabase" asp-route-id="@Model.Id">Download_db</a>*@


                    <a type="button" class="btn btn-secondary" asp-controller="ScriptCenter" asp-action="DownloadFileFromDatabase" asp-route-id="@Model.StudyCenter.FileModelId">Download</a>



                </dd>
                }

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudyCenter.LastUpdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudyCenter.LastUpdate)
            </dd>
        </dl>






    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.StudyCenter.Id" class="btn btn-light-primary font-weight-bold">Edit</a>

        @if (@Model.StudyCenter.FileModel != null)
        {
            <a @*asp-action="Analysis" asp-route-id="@Model?.Id"*@ @*href="http://20.113.31.254:8585/" target="_blank"*@ data-bs-toggle="modal" data-bs-target="#kt_modal_new_target" class="btn btn-primary  btn-lg btn-block font-weight-bold">Start Analysis</a>
        }

        <a asp-action="Index" class="btn btn-secondary font-weight-bold">Back to List</a>
    </div>
</div>












